<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Library</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">

            <!-- LOGO -->
            <a class="navbar-brand" asp-controller="Folder" asp-action="Index">
                <i class="fas fa-book-open me-2"></i> Library
            </a>

            <!-- TOGGLER -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAV LINKS -->
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Folder"
                           asp-action="Index">
                            <i class="fas fa-books me-1"></i> Books
                        </a>
                    </li>
                </ul>

                <!-- RIGHT SIDE -->
                <ul class="navbar-nav align-items-center">

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="AdminUsers"
                                   asp-action="Index">
                                    <i class="fas fa-users-cog me-1"></i> Users Dashboard
                                </a>
                            </li>

                            <li class="nav-item text-light me-3">
                                <i class="fas fa-user-shield me-1"></i> Admin
                            </li>
                        }
                        else
                        {
                            <li class="nav-item text-light me-3">
                                <i class="fas fa-user me-1"></i> @User.Identity.Name
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Account"
                               asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Account"
                               asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- ================= BODY ================= -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- ================= SCRIPTS ================= -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/docx-preview/dist/docx-preview.min.js"></script>

    @RenderSection("Scripts", required: false)

    <!-- ================= DRAG & DROP ================= -->
    <script>
        let draggedBookId = null;

        function dragBook(event) {
            draggedBookId = event.target.dataset.bookId;
            event.dataTransfer.setData("text/plain", draggedBookId);
        }

        function allowDrop(event) {
            event.preventDefault();
        }

        function dropBook(event) {
            event.preventDefault();

            const folderId = event.currentTarget.dataset.folderId;
            if (!draggedBookId || !folderId) return;

            if (!confirm("Move this book to this folder?")) return;

            fetch('/Folder/MoveBook', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken':
                        document.querySelector("input[name='__RequestVerificationToken']")?.value
                },
                body: JSON.stringify({
                    bookId: draggedBookId,
                    folderId: folderId
                })
            })
            .then(res => {
                if (res.ok) location.reload();
            });
        }
    </script>

</body>
</html>
