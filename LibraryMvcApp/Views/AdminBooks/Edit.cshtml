@model LibraryMvcApp.Models.Book

<div class="page-header">
    <h2><i class="fas fa-edit me-2"></i>Edit Book</h2>
</div>

<div class="form-container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">

        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="folderId" value="@ViewBag.FolderId" />


        <div class="mb-4">
            <label class="form-label"><i class="fas fa-heading me-2"></i>Title</label>
            <input name="title" class="form-control" value="@Model.Title" required />
        </div>

        <div class="mb-4">
            <label class="form-label"><i class="fas fa-user-edit me-2"></i>Author</label>
            <input name="author" class="form-control" value="@Model.Author" required />
        </div>

        <div class="mb-4">
            <label class="form-label"><i class="fas fa-align-left me-2"></i>Description</label>
            <textarea name="description" class="form-control">@Model.Description</textarea>
        </div>

        <div class="mb-4">
            <label class="form-label"><i class="fas fa-file me-2"></i>Current File</label>
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <div class="file-preview">
                    <i class="fas fa-file-pdf me-2"></i>
                    <a href="@Model.FilePath" target="_blank">View Current File</a>
                </div>
            }
            <label class="form-label mt-3"><i class="fas fa-file-upload me-2"></i>Upload New File (optional)</label>
            <input type="file" name="file" class="form-control" />
        </div>

        <div class="mb-4">
            <label class="form-label"><i class="fas fa-image me-2"></i>Current Cover</label>
            <div class="mb-3">
                <img src="@(string.IsNullOrEmpty(Model.CoverImagePath) ? "/images/default-cover.jpg" : Model.CoverImagePath)"
                     class="cover-preview" style="width:150px;height:auto;" />
            </div>
            <label class="form-label"><i class="fas fa-image me-2"></i>Upload New Cover (optional)</label>
            <input type="file" name="coverImage" class="form-control" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
        </div>
    </form>
</div>
