@model IEnumerable<LibraryMvcApp.Models.Book>

@{
    ViewBag.Title = "Books";
    var folderId = ViewBag.FolderId as int?;
}
<a asp-controller="Folder"
   asp-action="Index"
   asp-route-id="@ViewBag.FolderId"
   class="btn btn-secondary">
    <i class="fas fa-arrow-left me-1"></i>
    Back to Folder
</a>

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="fas fa-book-reader me-2"></i> Books</h2>
</div>

<!-- ===== ACTION BUTTONS ===== -->
<div class="mb-4 d-flex gap-2">

    <!-- Create Subfolder -->
    <a href="/Folder?parentId=@folderId" class="btn btn-warning">
        <i class="fas fa-folder-plus me-1"></i> Create Subfolder
    </a>

    <!-- Add Book -->
    <a asp-action="Create" asp-route-folderId="@folderId" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Add Book
    </a>

</div>

<!-- ===== BOOK LIST ===== -->
<div class="row g-4">
    @foreach (var book in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card book-card h-100">

                <!-- Cover -->
                <img class="card-img-top"
                     src="@(string.IsNullOrEmpty(book.CoverImagePath)
                                                 ? "/images/default-cover.jpg"
                                                 : book.CoverImagePath)"
                     alt="@book.Title" />

                <!-- Content -->
                <div class="card-body d-flex flex-column">

                    <h5 class="card-title">@book.Title</h5>

                    <p class="card-text text-muted">
                        <i class="fas fa-user me-1"></i>
                        @(string.IsNullOrEmpty(book.Author) ? "Unknown" : book.Author)
                    </p>

                    <div class="mt-auto d-flex align-items-center gap-2">
                        <a asp-controller="Library" asp-action="Details" asp-route-id="@book.Id"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-book-open me-1"></i> Read
                        </a>

                        <a asp-action="Edit" asp-route-id="@book.Id"
                           asp-route-folderId="@folderId"
                           class="btn btn-secondary btn-sm">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>

                        <a asp-action="Delete" asp-route-id="@book.Id"
                           asp-route-folderId="@folderId"
                           class="btn btn-danger btn-sm">
                            <i class="fas fa-trash me-1"></i> Delete
                        </a>
                    </div>


                </div>

            </div>
        </div>
    }
</div>
