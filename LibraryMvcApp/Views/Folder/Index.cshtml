@model LibraryMvcApp.Models.Folder
@using System.Linq
@{
    ViewBag.Title = "Folders";
}

<!-- PAGE HEADER -->
<div class="page-header">

    <h2>
        <i class="fas fa-folder-open me-2"></i>

        @if (ViewBag.Breadcrumb != null)
        {
            foreach (var f in ViewBag.Breadcrumb)
            {
                <span>
                    <a href="/Folder?parentId=@f.Id">@f.Name</a>
                </span>
                <span> / </span>
            }
        }
        else
        {
            <span>Root</span>
        }
    </h2>

</div>

<!-- ACTION BUTTONS -->
<div class="d-flex gap-3 mb-4">

    <!-- Add Book -->
    <a asp-controller="AdminBooks"
       asp-action="Create"
       asp-route-folderId="@Model.Id"
       class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Add Book
    </a>

    <!-- Create Subfolder -->
    @if (User.IsInRole("Admin"))
    {
    <form method="post" asp-action="Create" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" name="parentId" value="@((Model.Id == 0) ? null : Model.Id)" />
        <input type="text" name="name" class="form-control" placeholder="New folder name" required />
        <button class="btn btn-warning">
            <i class="fas fa-folder-plus me-1"></i> Create Subfolder
        </button>
    </form>

        
    }
</div>

<!-- MAIN CONTENT -->
<div class="row g-4">

    <!-- ======================== FOLDERS ======================== -->
    @foreach (var folder in Model.SubFolders)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card folder-card h-100"
                 onclick="location.href='@Url.Action("Index", "Folder", new { id = folder.Id })'"
                 style="cursor:pointer">

                <!-- Folder Icon -->
                <div class="d-flex justify-content-center align-items-center"
                     style="height:250px; background:#f7f7f7; font-size:4rem;">
                    <i class="fas fa-folder text-warning"></i>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@folder.Name</h5>
                    <p class="text-muted">Folder</p>

                    <div class="mt-auto d-flex justify-content-between">

                        <a class="btn btn-warning btn-sm"
                           href="@Url.Action("Index", "Folder", new { id = folder.Id })">
                            <i class="fas fa-folder-open me-1"></i> Open
                        </a>
                        <!-- Delete -->
                        @if (User.IsInRole("Admin"))
                        {
                        <form method="post" asp-action="Delete"
                              onsubmit="return confirm('Are you sure you want to delete this folder and its content?')">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@folder.Id" />
                            <button class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>

                            
                        }
                    </div>

                </div>

            </div>
        </div>
    }

    <!-- ======================== BOOKS ======================== -->
    @foreach (var book in Model.Books)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card book-card h-100">

                <!-- Book Cover -->
                <img class="card-img-top"
                     style="height:250px; object-fit:cover;"
                     src="@(string.IsNullOrEmpty(book.CoverImagePath)
                                                  ? "/images/default-cover.jpg"
                                                  : book.CoverImagePath)"
                     alt="@book.Title" />

                <div class="card-body d-flex flex-column">

                    <h5 class="card-title">@book.Title</h5>

                    <p class="text-muted">
                        <i class="fas fa-user me-1"></i>
                        @(book.Author ?? "Unknown")
                    </p>

                    <!-- Badge showing location -->
                    @if (book.FolderId != null)
                    {
                        <span class="badge bg-primary mb-2">
                            <i class="fas fa-folder me-1"></i> @Model.Name
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary mb-2">
                            <i class="fas fa-home me-1"></i> Root
                        </span>
                    }

                    <!-- Actions -->
                    <div class="mt-auto d-flex gap-2">

                        <a asp-controller="Library"
                           asp-action="Details"
                           asp-route-id="@book.Id"
                           asp-route-folderId="@ViewBag.CurrentFolderId"
                           class="btn btn-primary">
                            <i class="fas fa-book-open me-1"></i> Read
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="AdminBooks"
                            asp-action="Edit"
                            asp-route-id="@book.Id"
                            class="btn btn-secondary btn-sm">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                            <a asp-controller="AdminBooks"
                               asp-action="Delete"
                               asp-route-id="@book.Id"
                               class="btn btn-danger btn-sm">
                                <i class="fas fa-delete me-1"></i> Delete
                            </a>
                        }
                    </div>

                </div>

            </div>
        </div>
    }

</div>
