@model LibraryMvcApp.Models.Folder
@using System.Linq

@{
    ViewBag.Title = "Folders";
}

<!-- ================= BACK BUTTON ================= -->
@if (ViewBag.ParentFolderId != null)
{
    <a asp-controller="Folder"
       asp-action="Index"
       asp-route-id="@ViewBag.ParentFolderId"
       class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left me-1"></i>
        Back
    </a>
}

<!-- ================= PAGE HEADER ================= -->
<div class="page-header mb-4">

    <!-- SEARCH -->
    <input type="text"
           id="searchBox"
           class="form-control mb-3"
           placeholder="🔍 ابحث عن كتاب أو فولدر..." />

    <div id="searchResult"></div>

    <!-- BREADCRUMB -->
    <h4 class="mt-3">
        <i class="fas fa-folder-open me-2"></i>

        @if (ViewBag.Breadcrumb != null && ViewBag.Breadcrumb.Count > 0)
        {
            <a asp-controller="Folder" asp-action="Index">Root</a>

            foreach (var f in ViewBag.Breadcrumb)
            {
                <span> / </span>
                <a asp-controller="Folder"
                   asp-action="Index"
                   asp-route-id="@f.Id">
                    @f.Name
                </a>
            }
        }
        else
        {
            <span>Root</span>
        }
    </h4>
</div>

<!-- ================= ACTIONS ================= -->
<div class="d-flex gap-3 mb-4 flex-wrap">

    <!-- ADD BOOK -->
    @if (User.IsInRole("Admin") ||
        (!string.IsNullOrEmpty(Model.AllowedRole) && User.IsInRole(Model.AllowedRole)))
    {
        <a asp-controller="AdminBooks"
           asp-action="Create"
           asp-route-folderId="@Model.Id"
           class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add Book
        </a>
    }

    <!-- CREATE SUBFOLDER (ADMIN ONLY) -->
    @if (User.IsInRole("Admin"))
    {
        <form asp-action="Create" method="post" class="d-flex gap-2">
            <input type="hidden" name="parentId" value="@Model.Id" />

            <input type="text"
                   name="name"
                   class="form-control"
                   placeholder="New folder name"
                   required />

            <select name="allowedRole" class="form-select" style="max-width:200px">
                <option value="">Public (View Only)</option>
                <option value="Quality">Quality</option>
                <option value="HR">HR</option>
                <option value="Production">Production</option>
            </select>

            <button type="submit" class="btn btn-warning">
                CREATE SUBFOLDER
            </button>
        </form>
    }
</div>

<!-- ================= MAIN CONTENT ================= -->
<div class="row g-4">

    <!-- ======================== FOLDERS ======================== -->
    @foreach (var folder in Model.SubFolders)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card h-100">

                <div class="d-flex justify-content-center align-items-center"
                     style="height:220px; background:#f7f7f7; font-size:4rem;">
                    <i class="fas fa-folder text-warning"></i>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@folder.Name</h5>
                    <p class="text-muted">Folder</p>

                    <div class="mt-auto d-flex justify-content-between">

                        <a class="btn btn-warning btn-sm"
                           asp-controller="Folder"
                           asp-action="Index"
                           asp-route-id="@folder.Id">
                            <i class="fas fa-folder-open me-1"></i> Open
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <form method="post"
                                  asp-action="Delete"
                                  onsubmit="return confirm('Delete this folder and all its contents?')">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@folder.Id" />
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- ======================== BOOKS ======================== -->
    @foreach (var book in Model.Books)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card h-100">

                <img class="card-img-top"
                     style="height:220px; object-fit:cover;"
                     src="@(string.IsNullOrEmpty(book.CoverImagePath)
                                                 ? "/images/default-cover.jpg"
                                                 : book.CoverImagePath)" />

                <div class="card-body d-flex flex-column">

                    <h5 class="card-title">@book.Title</h5>

                    <p class="text-muted">
                        <i class="fas fa-user me-1"></i>
                        @(book.Author ?? "Unknown")
                    </p>

                    <span class="badge bg-primary mb-2">
                        <i class="fas fa-folder me-1"></i> @Model.Name
                    </span>

                    <div class="mt-auto d-flex gap-2">

                        <a asp-controller="Library"
                           asp-action="Details"
                           asp-route-id="@book.Id"
                           asp-route-folderId="@Model.Id"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-book-open me-1"></i> Read
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="AdminBooks"
                               asp-action="Edit"
                               asp-route-id="@book.Id"
                               asp-route-folderId="@Model.Id"
                               class="btn btn-secondary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a asp-controller="AdminBooks"
                               asp-action="Delete"
                               asp-route-id="@book.Id"
                               asp-route-folderId="@Model.Id"
                               class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- ================= SEARCH SCRIPT ================= -->
<script>
    const searchBox = document.getElementById("searchBox");
    const resultDiv = document.getElementById("searchResult");
    let timer = null;

    searchBox.addEventListener("keyup", function () {
        clearTimeout(timer);

        timer = setTimeout(() => {
            const q = searchBox.value.trim();

            if (q.length === 0) {
                resultDiv.innerHTML = "";
                return;
            }

            fetch(`/Folder/Search?q=${encodeURIComponent(q)}`)
                .then(res => res.text())
                .then(html => {
                    resultDiv.innerHTML = html;
                });
        }, 300);
    });
</script>
