@model LibraryMvcApp.Models.Folder
@using System.Linq

@{
    ViewBag.Title = "Folders";

    bool canManageCurrentFolder =
        User.IsInRole("Admin") ||
        (!string.IsNullOrEmpty(Model.AllowedRole) &&
         User.IsInRole(Model.AllowedRole));
}

@if (ViewBag.ParentFolderId != null)
{
    <a asp-controller="Folder"
       asp-action="Index"
       asp-route-id="@ViewBag.ParentFolderId"
       class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left me-1"></i>
        Back
    </a>
}

<div class="page-header mb-4">
    <input type="text"
           id="searchBox"
           class="form-control mb-3"
           placeholder="🔍 ابحث عن كتاب أو فولدر..." />

    <div id="searchResult"></div>

    <h4 class="mt-3">
        <i class="fas fa-folder-open me-2"></i>

        @if (ViewBag.Breadcrumb != null && ViewBag.Breadcrumb.Count > 0)
        {
            <a asp-controller="Folder" asp-action="Index">Root</a>

            foreach (var f in ViewBag.Breadcrumb)
            {
                <span> / </span>
                <a asp-controller="Folder"
                   asp-action="Index"
                   asp-route-id="@f.Id">
                    @f.Name
                </a>
            }
        }
        else
        {
            <span>Root</span>
        }
    </h4>
</div>

<div class="d-flex gap-3 mb-4 flex-wrap">

    @if (canManageCurrentFolder)
    {
        <a asp-controller="AdminBooks"
           asp-action="Create"
           asp-route-folderId="@Model.Id"
           class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add Book
        </a>
    }

    @if (User.IsInRole("Admin"))
    {
        <form asp-controller="Folder"
              asp-action="Create"
              method="post"
              class="d-flex gap-2">

            @Html.AntiForgeryToken()

            <input type="hidden" name="parentId" value="@Model.Id" />

            <input type="text"
                   name="name"
                   class="form-control"
                   placeholder="New folder name"
                   required />

            <select name="allowedRole" class="form-select" style="max-width:200px">
                <option value="">Public (View Only)</option>
                <option value="Quality">Quality</option>
                <option value="HR">HR</option>
                <option value="Production">Production</option>
            </select>

            <button type="submit" class="btn btn-warning">
                CREATE SUBFOLDER
            </button>
        </form>
    }
</div>

<div class="row g-4">

    @foreach (var folder in Model.SubFolders)
    {
        bool canManageFolder =
        User.IsInRole("Admin") ||
        (!string.IsNullOrEmpty(folder.AllowedRole) &&
        User.IsInRole(folder.AllowedRole));

        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card h-100">

                <div class="d-flex justify-content-center align-items-center"
                     style="height:220px; background:#f7f7f7; font-size:4rem;">
                    <i class="fas fa-folder text-warning"></i>
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@folder.Name</h5>
                    <p class="text-muted">Folder</p>

                    <div class="mt-auto d-flex justify-content-between align-items-center">

                        <a class="btn btn-warning btn-sm"
                           asp-controller="Folder"
                           asp-action="Index"
                           asp-route-id="@folder.Id">
                            <i class="fas fa-folder-open me-1"></i> Open
                        </a>

                        @if (canManageFolder)
                        {
                            <div class="d-flex gap-1">

                                <a asp-controller="Folder"
                                   asp-action="Edit"
                                   asp-route-id="@folder.Id"
                                   class="btn btn-secondary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <form asp-controller="Folder"
                                      asp-action="Delete"
                                      method="post"
                                      onsubmit="return confirm('Delete this folder and its content?');"
                                      class="d-inline">

                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@folder.Id" />

                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @foreach (var book in Model.Books)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card h-100">

                <img class="card-img-top"
                     style="height:220px; object-fit:cover;"
                     src="@(string.IsNullOrEmpty(book.CoverImagePath)
                                              ? "/images/default-cover.jpg"
                                              : book.CoverImagePath)" />

                <div class="card-body d-flex flex-column">

                    <h5 class="card-title">@book.Title</h5>

                    <p class="text-muted">
                        <i class="fas fa-user me-1"></i>
                        @(book.Author ?? "Unknown")
                    </p>

                    <span class="badge bg-primary mb-2">
                        <i class="fas fa-folder me-1"></i> @Model.Name
                    </span>

                    <div class="mt-auto d-flex gap-2">

                        <a asp-controller="Library"
                           asp-action="Details"
                           asp-route-id="@book.Id"
                           asp-route-folderId="@Model.Id"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-book-open me-1"></i> Read
                        </a>

                        @if (canManageCurrentFolder)
                        {
                            <a asp-controller="AdminBooks"
                               asp-action="Edit"
                               asp-route-id="@book.Id"
                               asp-route-folderId="@Model.Id"
                               class="btn btn-secondary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form asp-controller="AdminBooks"
                                  asp-action="Delete"
                                  method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this book?');"
                                  class="d-inline">

                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@book.Id" />
                                <input type="hidden" name="folderId" value="@Model.Id" />

                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    const searchBox = document.getElementById("searchBox");
    const resultDiv = document.getElementById("searchResult");
    let timer = null;

    searchBox.addEventListener("keyup", function () {
        clearTimeout(timer);

        timer = setTimeout(() => {
            const q = searchBox.value.trim();

            if (!q) {
                resultDiv.innerHTML = "";
                return;
            }

            fetch(`/Folder/Search?q=${encodeURIComponent(q)}`)
                .then(res => res.text())
                .then(html => resultDiv.innerHTML = html);
        }, 300);
    });
</script>
