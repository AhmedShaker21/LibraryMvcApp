@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-users me-2"></i>Users Management
            </h4>
            <span class="badge bg-light text-primary fs-5 px-3 py-2">@Model.Count() Users</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4" style="width: 5%">#</th>
                            <th scope="col" style="width: 60%">
                                <i class="fas fa-envelope me-2 text-muted"></i>Email Address
                            </th>
                            <th scope="col" style="width: 20%">
                                <i class="fas fa-id-badge me-2 text-muted"></i>User ID
                            </th>
                            <th scope="col" class="text-center" style="width: 15%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted">@index</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-2">
                                            @u.Email?.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="fw-medium">@u.Email</span>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted font-monospace">@u.Id?.Substring(0, 8)...</small>
                                </td>
                                <td class="text-center">
                                    <form method="post" asp-action="Delete" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete user: @u.Email?')">
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                title="Delete User">
                                            <i class="fas fa-trash-alt me-1"></i>Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            index++;
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="fas fa-users fa-3x mb-3 opacity-25"></i>
                                    <p class="mb-0">No users found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>Add New User
            </a>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 14px;
    }

    .table > tbody > tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: none;
    }

    .table thead th {
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #dee2e6;
        padding: 1rem;
        color: black;
    }

    .table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }
</style>