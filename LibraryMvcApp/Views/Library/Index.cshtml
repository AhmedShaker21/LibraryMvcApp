@model IEnumerable<LibraryMvcApp.Models.Book>

<div class="page-header">
    <h2><i class="fas fa-book-reader me-2"></i>Library</h2>
</div>

<div class="row g-4">
    @foreach (var book in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card book-card">
                <img class="card-img-top"
                     src="@(string.IsNullOrEmpty(book.CoverImagePath) ? "/images/default-cover.jpg" : book.CoverImagePath)"
                     alt="@book.Title" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text text-muted">
                        <i class="fas fa-user me-1"></i>
                    <p>@(book.Author ?? "Unknown")</p>

                    </p>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary btn-sm mt-auto">
                        <i class="fas fa-book-open me-1"></i>Read
                    </a>
                </div>
            </div>
        </div>
    }
</div>